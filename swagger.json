  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "LimitsCheckRequest": {
        "type": "object",
        "properties": {
          "octo_shop_id": {
            "type": "integer",
            "format": "int64",
            "example": 242
          },
          "octo_payout_UUID": {
            "type": "string",
            "example": "356e0e55-b25e-4209-8784-b809c0bdc3e7"
          },
          "pinfl": {
            "type": "string",
            "example": "52212345678901"
          },
          "pan": {
            "type": "string",
            "example": "9860350112345678"
          },
          "currency": {
            "type": "integer",
            "example": 860
          },
          "total_amount": {
            "type": "number",
            "description": "A monetary amount with high precision, represented as a BigDecimal.",
            "example": 1000.00
          }
        },
        "required": [
          "octo_shop_id",
          "octo_payout_UUID",
          "pinfl",
          "pan",
          "currency",
          "total_amount"
        ]
      },
      "LimitsRevertRequest": {
        "type": "object",
        "properties": {
          "octo_shop_id": {
            "type": "integer",
            "format": "int64",
            "example": 242
          },
          "octo_payout_UUID": {
            "type": "string",
            "example": "356e0e55-b25e-4209-8784-b809c0bdc3e7"
          },
          "pinfl": {
            "type": "string",
            "example": "52212345678901"
          },
          "pan": {
            "type": "string",
            "example": "9860350112345678"
          },
          "currency": {
            "type": "integer",
            "example": 860
          },
          "total_amount": {
            "type": "number",
            "description": "A monetary amount with high precision, represented as a BigDecimal.",
            "example": 1000.00
          },
          "period_start": {
            "type": "string",
            "format": "YYYY-MM-DD",
            "example": "2025-10-31"
          }
        },
        "required": [
          "octo_shop_id",
          "octo_payout_UUID",
          "pinfl",
          "pan",
          "currency",
          "total_amount",
          "period_start"
        ]
      },
      "LimitsCheckResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "example": 0
          }
        },
        "required": [
          "error"
        ]
      },
      "AddLimitRuleRequest": {
        "type": "object",
        "properties": {
          "limitCount": {
            "type": "integer",
            "example": 10
          },
          "limitSum": {
            "type": "number",
            "example": 10000000
          },
          "limitDays": {
            "type": "number",
            "example": 20
          },
          "appliesTo": {
            "type": "string",
            "example": "CLIENT"
          },
          "description": {
            "type": "string",
            "example": "Limit rule for sum (UZS) and operations count for 20 days"
          },
          "limitType": {
            "type": "string",
            "example": "period_sum_count"
          },
          "currency": {
            "type": "integer",
            "example": 860
          }
        },
        "required": [
          "limitCount",
          "limitSum",
          "limitDays",
          "appliesTo",
          "description",
          "limitType",
          "currency"
        ]
      },
      "UpdateLimitRuleRequest": {
        "type": "object",
        "properties": {
          "limitRuleId": {
            "type": "string",
            "format": "uri",
            "example": 1
          },
          "limitCount": {
            "type": "integer",
            "example": 10
          },
          "limitSum": {
            "type": "number",
            "example": 10000000
          },
          "limitDays": {
            "type": "number",
            "example": 20
          },
          "appliesTo": {
            "type": "string",
            "example": "CLIENT"
          },
          "description": {
            "type": "string",
            "example": "Limit rule for sum (UZS) and operations count for 20 days"
          },
          "limitType": {
            "type": "string",
            "example": "period_sum_count"
          },
          "currency": {
            "type": "integer",
            "example": 860
          }
        },
        "required": [
          "limitRuleId",
          "limitCount",
          "limitSum",
          "limitDays",
