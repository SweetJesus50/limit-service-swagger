    "/api/v1/limits/check": {
      "post": {
        "tags": ["Limit Service"],
        "summary": "Limits Check",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LimitsCheckRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Limits Check",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LimitsCheckResponse"
                }
              }
            }
          },
          "400": {
            "description": "Unsuccessful Limits Check",
            "content": {
              "application/json": {
                "example": {
                  "error": 1,
                  "errMessage": "Limit exceeded for CLIENT"
                }
              }
            }
          }
        }
      }
    },
